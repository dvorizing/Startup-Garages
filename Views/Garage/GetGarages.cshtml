
<h2>All Garages</h2>
<table class="table">
    <thead>
        <tr>
            <th>GarageId</th>
            <th>GarageName</th>
            <th>Address</th>
            <th>PhoneNumber</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var garage in Model)
        {
            <tr>

                <td>@garage.GarageID</td>
                <td>@garage.GarageName</td>
                <td>@garage.Address</td>
                <td>@garage.PhoneNumber</td>
                <td>
                    <a href="@Url.Action("Delete", "Garage",new { id = garage.GarageID})">Delete</a>
                    <a href="@Url.Action("Update", "Garage",new { id =garage.GarageID})">Update</a>

                </td>

            </tr>
        }
    </tbody>
</table>
