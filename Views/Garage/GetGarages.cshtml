<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">

            @if (ViewBag.LoopStartPage > 1)
            {
                <li class="page-item ">
                    <a href="@Url.Action("GetGarages", "Garage",new { page = @ViewBag.PageIndex-1, IsMooveP=true})">prev</a>
                </li>
            }
            @for (int page1 = ViewBag.LoopStartPage; page1 <= ViewBag.LoopEndPage; page1++)
            {
                <li class="page-item ">
                    <a href="@Url.Action("GetGarages", "Garage",new { page = @page1})">@page1</a>

                </li>
            }

            @if (ViewBag.LoopEndPage < ViewBag.TotaPages)
            {
                <li class="page-item ">
                    <a href="@Url.Action("GetGarages", "Garage",new { page = @ViewBag.PageIndex+1, IsMooveN=true})">next</a>

                </li>
            }

        </ul>
    </nav>
</div>