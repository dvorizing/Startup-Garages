
<h2>All GarageVisits</h2>
<a href="@Url.Action("Register", "GarageVisit",new { GarageId =@ViewBag.GarageID})">New Visit</a>
<table class="table">
    <thead>
        <tr>
            <th>VisitId</th>
            <th>CustomerId</th>
            <th>GarageId</th>
            <th>VisitDate</th>
            <th>ServiceDescription</th>
            <th>TotalCost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var visit in Model)
        {
            <tr>
                <td>@visit.VisitID</td>
                <td>@visit.VehicleID</td>
                <td>@visit.GarageID</td>
                <td>@visit.VisitDate</td>
                <td>@visit.TreatmentNote</td>
                <td>@visit.TotalCost</td>
                <td>
                    <a href="@Url.Action("Update", "GarageVisit",new { id = @visit.VisitID})">Edit</a>
                    <a href="@Url.Action("Delete", "GarageVisit",new { id = @visit.VisitID})">Delete</a>

                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <nav aria-label="Page navigation">
        <ul class="pagination">

            @if (ViewBag.LoopStartPage > 1)
            {
                <li class="page-item ">
                    <a href="@Url.Action("GetVisites", "GarageVisit",new { page = @ViewBag.PageIndex-1, IsMooveP=true})">prev</a>

                </li>
            }
            @for (int page1 = ViewBag.LoopStartPage; page1 <= ViewBag.LoopEndPage; page1++)
            {
                <li class="page-item ">
                    <a href="@Url.Action("GetVisites", "GarageVisit",new { page = @page1})">@page1</a>
                </li>
            }

            @if (ViewBag.LoopEndPage < ViewBag.TotaPages)
            {
                <li class="page-item ">
                    <a href="@Url.Action("GetVisites", "GarageVisit",new { page = @ViewBag.PageIndex+1, IsMooveN=true})">next</a>

                </li>
            }

        </ul>
    </nav>
</div>
